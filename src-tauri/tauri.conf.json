{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kekris",
  "version": "0.0.0",
  "identifier": "com.kinire.kekris",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:4321/",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {"windows": [
      {
        "title": "main",
        "width": 800,
        "height": 600,
        "focus": false,
        "fullscreen": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "listen_to_events",
          "windows": ["main"],
          "permissions": [
            "core:event:default",
            "core:event:allow-listen"
          ],
          "platforms": ["macOS", "windows", "linux"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
