{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kekris",
  "version": "0.3.0",
  "identifier": "com.kinire.kekris",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420/",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "main",
        "focus": true,
        "fullscreen": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "listen_to_events",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:event:default",
            "core:event:allow-listen"
          ],
          "platforms": [
            "macOS",
            "windows",
            "linux"
          ]
        },
        {
          "identifier": "shell:allow-execute",
          "windows": [
            "main"
          ],
          "allow": [
            {
              "name": "exec-sh",
              "cmd": "sh",
              "args": [
                "-c",
                {
                  "validator": "\\S+"
                }
              ],
              "sidecar": false
            }
          ],
          "permissions": [
            "shell:allow-open",
            "shell:allow-execute"
          ],
          "platforms": [
            "macOS",
            "windows",
            "linux"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./migrations"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {
          "/usr/share/README.md": "../README.md"
        }
      }
    },
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": [
          "en-US",
          "es-ES"
        ]
      },
      "webviewInstallMode": {
        "silent": true,
        "type": "embedBootstrapper"
      }
    }
  }
}